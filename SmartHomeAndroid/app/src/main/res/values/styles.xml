<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>


    </style>



    <!-- Toolbar Dark  -->

    <style name="ToolbarDarkStyle" parent="Widget.AppCompat.Toolbar">

        <item name="titleTextAppearance">@style/ToolbarDarkStyle.TitleAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarDarkStyle.SubtitleAppearance</item>
        <item name="android:background">@color/toolbarDark_background</item>


    </style>

    <style name="ToolbarDarkStyle.TitleAppearance" parent="TextAppearance.AppCompat">

        <item name="android:textSize">@dimen/toolbar_titleTextSize</item>
        <item name="android:textColor">@color/toolbarDark_titleTextColor</item>

    </style>

    <style name="ToolbarDarkStyle.SubtitleAppearance" parent="TextAppearance.AppCompat">

        <item name="android:textSize">@dimen/toolbar_subtitleTextSize</item>
        <item name="android:textColor">@color/toolbarDark_subtitleTextColor</item>

    </style>

    <!-- Toolbar Dark  -->


    <!-- Toolbar Light  -->

    <style name="ToolbarLightStyle" parent="Widget.AppCompat.Toolbar">

        <item name="titleTextAppearance">@style/ToolbarLightStyle.TitleAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarLightStyle.SubtitleAppearance</item>
        <item name="android:background">@color/toolbarLight_background</item>


    </style>

    <style name="ToolbarLightStyle.TitleAppearance" parent="TextAppearance.AppCompat">

        <item name="android:textSize">@dimen/toolbar_titleTextSize</item>
        <item name="android:textColor">@color/toolbarLight_titleTextColor</item>

    </style>

    <style name="ToolbarLightStyle.SubtitleAppearance" parent="TextAppearance.AppCompat">

        <item name="android:textSize">@dimen/toolbar_subtitleTextSize</item>
        <item name="android:textColor">@color/toolbarLight_subtitleTextColor</item>

    </style>

    <!-- Toolbar Dark  -->

</resources>
