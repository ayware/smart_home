<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/single_item_act_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ToolbarDarkStyle"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/single_item_act_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_height="0dp">

        <EditText
            android:layout_width="match_parent"
            android:hint="İsim"
            android:id="@+id/single_item_act_etTitle"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_height="wrap_content"/>

        <Spinner
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/single_item_act_etTitle"
            android:id="@+id/single_item_act_spType"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textSize="13sp"
            android:hint="Örn; field1"
            android:id="@+id/single_item_act_etField"
            app:layout_constraintTop_toBottomOf="@id/single_item_act_spType"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textSize="13sp"
            android:hint="Default Değer"
            android:id="@+id/single_item_act_etValue"
            app:layout_constraintTop_toBottomOf="@id/single_item_act_etField"
            android:inputType="number"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/single_item_act_etValue"
            android:layout_marginTop="15dp"
            android:text="Tamam"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@color/colorAccent"
            android:id="@+id/single_item_act_btOkey"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>